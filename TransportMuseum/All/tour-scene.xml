<krpano version="1.17" title="Transport Museum" onstart="startup();">

	<include url="../../tour-viewer/xml/skin-style.xml" />
	<include url="../../tour-viewer/xml/toolbar-right.xml" />
	<include url="../../tour-viewer/xml/skin-layout.xml" />
	<include url="../../tour-viewer/xml/layout-mobile.xml" />
	<include url="../../tour-viewer/xml/layout-android.xml" />
	<include url="../../tour-viewer/xml/skin-event.xml" />
	<include url="../../tour-viewer/xml/skin-action.xml" />
	<include url="../../tour-viewer/xml/context-menu.xml" />
	<include url="../../tour-viewer/xml/plugin.xml" />
	
	<!-- set skin settings: bingmaps? gyro? thumbnail controlling? tooltips? -->
	<skin_settings bingmaps="false"
	               bingmaps_key=""
	               bingmaps_zoombuttons="false"
	               gyro="true"
	               thumbs_width="120" 
	               thumbs_height="80" 
	               thumbs_padding="10" 
	               thumbs_crop="0|40|240|160"
	               thumbs_opened="true"
	               thumbs_text="true"
	               thumbs_dragging="true"
	               thumbs_onhoverscrolling="false"
	               thumbs_scrollbuttons="false"
	               thumbs_scrollindicator="false"
	               thumbs_loop="false"
	               tooltips_thumbs="false"
	               tooltips_hotspots="true"
	               tooltips_mapspots="false"
	               controlbar_offset="20"
	               share_url="http://cdn2.lenscoop.com/TransportMuseum/All/?html5=flash"
	               />

	<!-- set optional skin logo url -->
	<layer name="skin_logo" url="../../tour-viewer/img/logo.png" scale="0.9" align="righttop" x="15" y="10" zorder="100" opened_onclick="openurl('http://lenscoop.com',_blank);" />

	<autorotate enabled="true" waittime="3.0" speed="5" />
	<!--autorotate enabled="true" waittime="6.0" accel="6" speed="10" horizon="15" tofov="60" /-->

	<scene name="scene_BerlinerMauer" title="Berliner Mauer" onstart="" thumburl="pano-images/BerlinerMauer.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="170" vlookat="0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="pano-images/BerlinerMauer.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512" progressive="false">
			<level tiledimagewidth="4608" tiledimageheight="4608">
				<cube url="pano-images/BerlinerMauer.tiles/%s/l4/%0v/l4_%s_%0v_%0h.jpg" />
			</level>
			<level tiledimagewidth="2304" tiledimageheight="2304">
				<cube url="pano-images/BerlinerMauer.tiles/%s/l3/%0v/l3_%s_%0v_%0h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="pano-images/BerlinerMauer.tiles/%s/l2/%0v/l2_%s_%0v_%0h.jpg" />
			</level>
			<level tiledimagewidth="576" tiledimageheight="576">
				<cube url="pano-images/BerlinerMauer.tiles/%s/l1/%0v/l1_%s_%0v_%0h.jpg" />
			</level>
			<mobile>
				<cube url="pano-images/BerlinerMauer.tiles/mobile_%s.jpg" />
			</mobile>
		</image>

		<!-- place your scene hotspots here -->

	</scene>

